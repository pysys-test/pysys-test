# This file configures the files in the source distribution, and also affects package data included in the binary wheel

# Include the top level readme and license documentation
include *.rst
include LICENSE.txt
include docs/*.rst
include docs/pysys/*.rst
include docs/pysys/*.rst.tmpl
include docs/_static/*
recursive-include docs *.py

include VERSION
include MANIFEST.in
include setup.*

recursive-include pysys/config/templates *

# all testcases and samples
recursive-include test *
recursive-include samples *

# include doc files staged here by setup.py
include pysys_docs/*
