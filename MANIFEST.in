# This file configures the files in the source distribution

# Include the top level readme and license documentation
include *.rst
include LICENSE.txt
include docs/*.rst
include docs/*.rst.tmpl
include docs/_static/*
recursive-include docs *.py

include VERSION
include MANIFEST.in
include setup.*

recursive-include pysys/xml/templates *

# all testcases and samples
recursive-include test *
recursive-include samples *
